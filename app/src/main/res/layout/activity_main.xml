<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="pencil,editMessage,editMessageStart,cancel" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/toolsTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"

        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/card_post" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/toolsTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="editMessage, content"
        tools:layout_editor_absoluteY="642dp" />

    <ImageButton
        android:id="@+id/pencil"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/toolsTop"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <TextView
        android:id="@+id/editMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:importantForAutofill="no"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/pencil"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintTop_toTopOf="@id/toolsTop"

        />

    <TextView
        android:id="@+id/editMessageStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:padding="16dp"
        android:maxLines="3"
        app:layout_constraintStart_toEndOf="@id/pencil"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintTop_toBottomOf="@+id/editMessage"
        app:layout_constraintBottom_toTopOf="@id/content"

        />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/content"
        app:srcCompat="@drawable/ic_baseline_cancel_24"
        app:layout_constraintTop_toTopOf="@id/toolsTop"
        />

    <EditText
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/post_text"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        android:padding="@dimen/common_spacing"
        android:importantForAutofill="no"
        android:maxLines="6"
      app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/save"
        app:layout_constraintStart_toEndOf="@id/smile"
        />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/content"
        app:srcCompat="@drawable/ic_baseline_check_circle_outline_24" />

    <ImageButton
        android:id="@+id/smile"
        android:layout_width="51dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_baseline_sentiment_satisfied_alt_24" />



</androidx.constraintlayout.widget.ConstraintLayout>