<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@sample/posts.json/data/authorAvatar"
        android:contentDescription="@string/avatar_author" />

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/options"
        app:layout_constraintBottom_toTopOf="@id/publisher"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintStart_toEndOf="@id/avatar"
        tools:text="@sample/posts.json/data/author"
        />


    <TextView
        android:id="@+id/publisher"
        android:layout_width="0dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintStart_toStartOf="@id/author"
        tools:text="@sample/posts.json/data/published"/>


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:srcCompat="@drawable/ic_baseline_more_vert_24"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/header_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="author,publisher,options"
        app:barrierDirection="bottom" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        app:layout_constraintTop_toBottomOf="@id/header_barrier"
        tools:text="@sample/posts.json/data/content"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottom_post_barrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="post"
        app:barrierDirection="bottom" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/like"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_outline_favorite_border_24"
        android:layout_margin="@dimen/margin_size"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/bottom_post_barrier"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/counter_like"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/like"
        app:layout_constraintTop_toTopOf="@id/like"
        tools:text="45000" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/share"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/counter_like"
        app:layout_constraintTop_toTopOf="@id/counter_like"
        android:src="@drawable/ic_baseline_share_24"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/counter_share"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/share"
        app:layout_constraintTop_toTopOf="@id/share"
        tools:text="45000" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/view"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/counter_share"
        android:src="@drawable/ic_baseline_remove_red_eye_24"
        app:layout_constraintEnd_toStartOf="@id/counter_view"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/counter_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="45000" />

</androidx.constraintlayout.widget.ConstraintLayout>